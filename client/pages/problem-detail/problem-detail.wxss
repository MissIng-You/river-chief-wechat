/* reset font-size: 10px */
html, body, page {
  font-size: 62.5%;
}

/* bg-white bg-light-white wxss */
.bg-white {
  background-color: #fff;
}
.bg-light-white {
  background-color: #f6f6ff;
}

/* text-ellipsis wxss */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

