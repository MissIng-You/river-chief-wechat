/* problem wxss */
.problem {
  background-color: #efeff4;
}
/* .problem-detail */
.problem .problem-detail {
  background-color: #fff;
  margin-top: 20rpx;
}
.problem-detail .tags-wrap {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.problem-detail .content {
  font-size: 1.4em;
  padding: 0 20rpx;
}
.problem-detail .image-list-wrap {
  padding: 20rpx;
}
.problem-detail .problem-address {
  padding: 0 20rpx 20rpx 20rpx;
}
/* problem-solve */
.problem .problem-solve {
  position: relative;
}
.problem-solve .arrow-top {
  position: absolute;
  top: -10rpx;
  left: 50%;
  margin-left: -20rpx;
  display: inline-block;
  content: "";
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent;
  border-bottom-color: #fff;
}

/* timeline wxss */
.timeline {
  padding: 20rpx;
  border-bottom: 1px solid #efeff4;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
/* timeline-header */
.timeline .timeline-header {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.timeline-header .timer {
  display: inline-block;
  text-align: center;
}
/* timeline-body */
.timeline .timeline-body {
  width: 80%;
  position: relative;
}
.timeline-body .arrow-left::before {
  position: absolute;
  top: 20rpx;
  left: -35rpx;
  display: inline-block;
  content: "";
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-color: transparent;
  border-right-color:#46bde2;
  border-style: solid;
}
/* timeline-body-inner */
.timeline-body .timeline-body-inner {
  background-color: #46bde2;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.timeline-body .content {
  display: inline-block;
  font-size: 1.4em;
  color: #fff;
}

/* image-list wxss */
.image-list {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.image-list .hot-image + .hot-image {
  margin-left: 20rpx;
}
/* image-list-small */
.image-list.image-list-small {
  padding: 5rpx;
  background-color: #46bde2;
}
.image-list-small .hot-image + .hot-image {
  margin-left: 5rpx;
}

/* hot-list wxss */
.hot-list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.hot-list + .hot-list {
  margin-top: 20rpx;
}


