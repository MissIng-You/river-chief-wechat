/* river wxss */
.river {
    margin-top: 20rpx;
    background-color: #fff;
}
/* .river-list */
.river .river-list {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding: 20rpx 20rpx 20rpx 0;
}

/* account-scroll wxss */
.account-scroll {
    margin-top: 20rpx;
    background-color: #fff;
}

/* card component wxss */
@import "../../components/card/card.wxss";

/* avator component wxss */
@import "../../components/avator/avator.wxss";

/* avator-list wxss */
.avator-list {
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.avator-list .avator+.avator {
  margin-left: 20rpx;
}

/* hot-list wxss */
.hot-list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-bottom: 1px solid #f3f5f7;
}
.hot-list + .hot-list {
  margin-top: 20rpx;
}


