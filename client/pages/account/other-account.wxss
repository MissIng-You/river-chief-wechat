/* reset font-size wxss */
html, body, page {
  font-size: 62.5%;
}

/* icon component wxss */
@import "../../components/icon/icon.wxss";

/* hot component wxss */
@import "../../components/hot/hot.wxss";

/* hot-image component wxss */
@import "../../components/hot/hot-image.wxss";

/* hot-image component wxss */
@import "../../components/hot/hot-header.wxss";

/* home wxss */
.account {
  background-color: #e0e0e0;
}

/* personal wxss*/
.personal {
    position: relative;
    display: flex;
    align-items: center;
    color: #fff;
}
/* personal-bg */
.personal .personal-bg {
  position: absolute;
  width:100%;
  height: 250rpx;
  opacity: .9;
}

/* personal-head wxss*/
.personal .personal-head {
    color: #fff;
    width: 180rpx;
    height: 180rpx;
    border: 2px solid #fff;
    border-radius: 50%;
    margin-top: 20rpx;
    position: relative;
    overflow: hidden;
    margin: 30rpx 40rpx 30rpx 40rpx;
}
.personal-head .head-bg {
  width: 180rpx;
  height: 180rpx;
  background-color: #e0e0e0;
}
/* rank */
.personal-head .rank {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    opacity: 0.8;
    background-color: #ff4500;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.rank .number {
  letter-spacing: 1px;
  font-weight: bold;
  font-size: 1.2em;
}
.rank .desc {
  font-size: 1.0em;
}
/* personal-info */
.personal .personal-info {
    z-index: 999;
    display:flex;
    justify-content:center;
    align-items:center;
    color: #fff;
}
.personal-info .info-name {
    display: flex;   
}
/* sex */
.personal-info .sex {
    margin-left: 25rpx;
}
.personal-info .sex .icon-inner {
  height: 30rpx;
  width: 30rpx;
}
/* appellation */
.personal-info .appellation {
  margin-left: 15rpx;
}
.personal-info .appellation .icon-inner {
  width: 150rpx;
  height: 40rpx;
}
.personal-info .info-content {
    line-height: 60rpx;
}
.info-name, .info-patrol {
    font-size: 1.4em;
}
.personal-info .info-address {
    font-size: 1.2em;
}
.personal-info .info-patrol text {
    color: #46bde2;
    padding: 0 10rpx 0 10rpx;
}
.personal-info .report {
    margin-left: 20rpx;
}

/* card-title component wxss */
