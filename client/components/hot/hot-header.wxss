/* avator component wxss */
@import "../avator/avator.wxss";

/* hot-header wxss */
.hot-header {
  margin: 0 20rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px dashed #e0e0e0;
}
.hot-header .hot-header-inner {
  display:flex;
  align-items: center;
  justify-content: flex-start;
} 
.hot-header .title {
  font-size: 1.5em;
  padding-right: 20rpx;
  margin-right: 10rpx;
  border-right: 1px solid #e0e0e0;
}
.hot-header .timer {
  color: #999;
  font-size: 1.2em;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 240rpx;
}