/* icon component wxss */
@import "../icon/icon.wxss";

/* card wxss */

/* card-header */
.card-header {
  position: relative;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 25rpx;
  line-height: 1.0;
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* title-wrap */
.card-header .title-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.card-header .title-wrap .title {
  margin-left: 20rpx;
}
/* title */
.card-header .title {
  color: #353535;
  font-size: 1.4em;
}
/* more */
.card-header .more {
  display:inline-block;
  color: #999;
  font-size: 1.2em;
  letter-spacing: 1px;
}